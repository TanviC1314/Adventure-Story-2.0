<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ABE4D8"
    tools:context=".level1">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="308dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="home"
        app:srcCompat="@drawable/homei" />


    <androidx.cardview.widget.CardView
        android:layout_width="334dp"
        android:layout_height="110dp"
        android:layout_marginTop="456dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="#ABE4D8"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardUseCompatPadding="true"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/sub2"
            style="bold"
            android:layout_width="302dp"
            android:layout_height="67dp"
            android:backgroundTint="#ABE4D8"
            android:fontFamily="@font/merriweather"
            android:gravity="center"
            android:visibility="invisible"
            android:textColor="#323232"
            android:text="I am brave enough, so I'll surely go inside" />

        <Button
            android:id="@+id/sub"
            style="bold"
            android:layout_width="302dp"
            android:layout_height="67dp"
            android:backgroundTint="#ABE4D8"
            android:fontFamily="@font/merriweather"
            android:gravity="center"
            android:textColor="#323232"
            android:text="I am brave enough, so I'll surely go inside" />


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="334dp"
        android:layout_height="111dp"
        android:layout_marginTop="544dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="#ABE4D8"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <Button
            android:id="@+id/btn"
            style="bold"
            android:layout_width="302dp"
            android:layout_height="67dp"
            android:backgroundTint="#ABE4D8"
            android:fontFamily="@font/merriweather"
            android:gravity="center"
            android:textColor="#323232"
            android:onClick="right"
            android:text="I'll prefer to hide under some huge tree." />


    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/text"
        android:layout_width="345dp"
        android:layout_height="329dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="200dp"
        android:onClick="home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/t5" />

    <ImageView
        android:id="@+id/text2"
        android:layout_width="345dp"
        android:layout_height="329dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="200dp"
        android:onClick="home"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/t6" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="248dp"
        android:layout_height="167dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="92dp"
        android:onClick="home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/i5" />

    <ImageView
        android:id="@+id/img2"
        android:layout_width="248dp"
        android:layout_height="167dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="92dp"
        android:onClick="home"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/i6" />

    <TextView
        android:id="@+id/t1"
        android:layout_width="340dp"
        android:layout_height="83dp"
        android:fontFamily="@font/lobster"
        android:gravity="center"
        android:text="Level 12"
        android:textColor="#252424"
        android:textSize="33sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.774"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>